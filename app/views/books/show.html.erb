<% if current_user.present? %>
   <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% else %>
   <%= link_to "Sign In", new_user_session_path %>
   <%= link_to "Sign Up", new_user_registration_path %>
<% end %>

<h1><%= @book.bookname %></h1>

<p>
   <strong>Author: </strong> <%= @book.author %><br />
  
   <strong>Genre: </strong> 
   <%= @book.genre.name%><br />
   
</p>
<!--IMAGE UPLOAD -->
<p><%= image_tag @book.image.url(:medium) %></p>

<p><%= @book.description %></p>

<h3>Comments</h3>
<%= render @book.comments %>
<br>
<% if current_user.present? %>
	<h1><%= "Add Comments" %></h1>
	<%= render 'comments/form'%>
	<b>   <%= link_to 'Edit', {:action => 'edit'} %> </b>
	<b>   <%= link_to "Delete", {:action => 'delete', :id => @book},:confirm => "Are you sure you want to delete this item?" %></b>

<% else %>
	
	<%= link_to "Sign in to comment", new_user_session_path %>
<% end %>



</hr>



 

