
<% if @books.blank? %>
   <p>There are no books currently in the system.</p>
<% else %>
   <p>These are the current books in our system</p>

         <ul id ="genres">
            <% @genres.each do |c| %>
      <li> 
      <%= link_to "#{c.name} (#{c.books.count})", books_show_genres_path(:id => c.id) %>
      </li>
            <% end %>

         </ul>

         <ul id = "books">
               <% @books.each do |c| %>
      <li>
         <p style="font-size=20px;">
         <%= link_to c.bookname, {:action => 'show', :id => c.id} %></p>
   	   <%= link_to image_tag c.image.url(:thumb), {:action => 'show', :id => c.id} %>
   
   
      </li>
   
               <% end %>
         </ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>