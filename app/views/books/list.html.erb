<% if current_user.present? %>
   <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% else %>
   <%= link_to "Sign In", new_user_session_path %>
<% end %>

<%= link_to "Sign Up", new_user_registration_path %>

<% if @books.blank? %>
   <p>There are no books currently in the system.</p>
<% else %>
   <p>These are the current books in our system</p>

         <ul id ="genres">
            <% @genres.each do |c| %>
      <li> 
      <%= link_to "#{c.name} (#{c.books.count})", books_show_genres_path(:id => c.id) %>
      </li>
            <% end %>
<p>User</p>
         </ul>

         <ul id = "books">
               <% @books.each do |c| %>
      <li>
         <p style="font-size=20px;">
         <%= link_to c.bookname, {:action => 'show', :id => c.id} %></p>
   	   <%= link_to image_tag(c.image.url(:thumb), {:action => 'show', :id => c.id}),{:action => 'show', :id => c.id} %>
         
   
   
      </li>
   
               <% end %>
         </ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>