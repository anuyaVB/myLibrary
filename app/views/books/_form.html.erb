<%= form_for @book, :html => { multipart: true } do |f|%>

<p>
	<%= f.label :bookname %><br>
	<%= f.text_field :bookname %>
</p>



<p>
	<%= f.label :author %><br>
	<%= f.text_field :author%>
</p>



<p>
	<%= f.label :book_genre_id %><br>
	<%= collection_select(:books, :genre_id, @genres, :id, :name, {prompt: true}) %>
</p>



<!--IMAGE UPLOAD -->
<p>
	<%= f.label :image %> <br>
	<%= f.file_field :image %>
</p>



<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>

<%= f.submit "Create" %>

<% end -%>
