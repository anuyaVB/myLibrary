<h1>Add new book</h1>

<%= form_for @book, :action => 'create', :html => { multipart: true } do |f|%>

<p>
	<%= f.label :bookname %><br>
	<%= f.text_field :bookname %>
</p>



<p>
	<%= f.label :author %><br>
	<%= f.text_field :author%>
</p>



<p>
	<%= f.label :book_genre_id %><br>
	<%= collection_select(:book, :genre_id, @genres, :id, :name, {prompt: true}) %>
</p>



<!--IMAGE UPLOAD -->
<p>
	<%= f.label :image %> <br>
	<%= f.file_field :image %>
</p>



<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>

<%= f.submit "Create" %>

<% end -%>


<%= link_to 'Back', {:action => 'list'} %>



